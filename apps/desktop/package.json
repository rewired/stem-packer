{
  "name": "@stem-packer/desktop",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"pnpm dev:main\" \"pnpm dev:renderer\" \"pnpm dev:electron\"",
    "dev:main": "tsup --config tsup.config.ts --watch",
    "dev:renderer": "vite dev --host",
    "dev:electron": "cross-env NODE_ENV=development VITE_DEV_SERVER_URL=http://localhost:5173 pnpm exec wait-on dist/main.js dist/preload.js http://localhost:5173 && cross-env NODE_ENV=development VITE_DEV_SERVER_URL=http://localhost:5173 pnpm exec nodemon --watch dist/main.js --watch dist/preload.js --exec \"electron .\"",
    "build": "pnpm run build:main && pnpm run build:renderer",
    "build:main": "cross-env NODE_ENV=production tsup --config tsup.config.ts",
    "build:renderer": "vite build",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "@stem-packer/i18n": "workspace:*",
    "@stem-packer/ui": "workspace:*",
    "electron": "^38.2.0",
    "picomatch": "^4.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "@types/picomatch": "^3.0.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "daisyui": "^4.12.14",
    "electron-builder": "^24.13.3",
    "jsdom": "^25.0.1",
    "nodemon": "^3.1.7",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "tsup": "^8.3.5",
    "vite": "^7.1.7",
    "vitest": "^2.1.6",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=22"
  }
}
